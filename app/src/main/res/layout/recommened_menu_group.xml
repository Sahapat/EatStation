<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/recommened_group_paddingbottom"
    android:paddingLeft="@dimen/recommened_group_paddingleft"
    android:paddingRight="@dimen/recommened_group_paddingright"
    android:paddingTop="@dimen/recommened_group_paddingtop">

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:id="@+id/recommened_img_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_menu1"
        android:clickable="true"
        />

    <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
        android:id="@+id/recommened_header_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slak,dlasdasd"
        android:textColor="@color/text_bold_black"
        android:textSize="@dimen/header_text_size"
        app:font_style="bold" />

    <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
        android:id="@+id/recommened_content_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slak,dlasdasd"
        android:textColor="@color/text_bold_black"
        android:textSize="@dimen/content_text_size"
        app:font_style="light" />
</LinearLayout>