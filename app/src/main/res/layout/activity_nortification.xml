<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NortificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.inspiretail.anint.eatstation.ViewGroups.ToolbarGroup
            android:id="@+id/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_btn_brown_press">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1">

                        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
                            android:id="@+id/txt_nearby"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="Nearby"
                            android:textColor="@color/text_bold_black"
                            android:textSize="24sp"
                            app:font_style="bold" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
                            android:id="@+id/txt_like"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:text="Likes"
                            android:textColor="@color/text_bold_black"
                            android:textSize="24sp"
                            app:font_style="bold" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.inspiretail.anint.eatstation.ViewGroups.RecommenedMenuGroup
                        android:id="@+id/menu_group1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.inspiretail.anint.eatstation.ViewGroups.RecommenedMenuGroup
                        android:id="@+id/menu_group2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.inspiretail.anint.eatstation.ViewGroups.RecommenedMenuGroup
                        android:id="@+id/menu_group3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.inspiretail.anint.eatstation.ViewGroups.RecommenedMenuGroup
                        android:id="@+id/menu_group4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionbarsize"
                    android:background="@android:color/transparent" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.inspiretail.anint.eatstation.ViewGroups.NevigationButtomGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</FrameLayout>