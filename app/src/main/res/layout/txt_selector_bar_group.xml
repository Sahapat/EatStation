<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:layout_marginTop="24dp">

    <FrameLayout
        android:id="@+id/frame_1"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/img_frame_black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_arrow" />

        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
            android:id="@+id/txt_frame1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|left"
            android:textColor="@color/text_bold_black"
            android:text="เลือกประเภทอาหาร"
            android:textSize="20sp"
            app:font_style="regular" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/frame_2"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_1"
        android:visibility="invisible"
        >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/img_frame_black" />

        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
            android:id="@+id/txt_frame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|left"
            android:textColor="@color/text_bold_black"
            android:text="เลือกประเภทอาหาร"
            android:textSize="20sp"
            app:font_style="regular" />
    </FrameLayout>
    <FrameLayout
        android:clickable="true"
        android:id="@+id/frame_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_2"
        android:visibility="invisible"
        >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/img_frame_black" />

        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
            android:id="@+id/txt_frame3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|left"
            android:textColor="@color/text_bold_black"
            android:text="เลือกประเภทอาหาร"
            android:textSize="20sp"
            app:font_style="regular" />
    </FrameLayout>
    <FrameLayout
        android:clickable="true"
        android:id="@+id/frame_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_3"
        android:visibility="invisible"
        >

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/img_frame_black" />

        <com.inspiretail.anint.eatstation.CustomViews.TextView_rsu_font
            android:id="@+id/txt_frame4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center|left"
            android:textColor="@color/text_bold_black"
            android:text="เลือกประเภทอาหาร"
            android:textSize="20sp"
            app:font_style="regular" />
    </FrameLayout>
</RelativeLayout>